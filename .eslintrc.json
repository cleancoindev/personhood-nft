{
	"env": {
		"commonjs": true,
		"es6": true,
		"mocha": true,
		"node": true
	},
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 2018
	},
	"plugins": ["@typescript-eslint"],
	"extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
	"rules": {
		"no-unused-vars": ["error", { "argsIgnorePattern": "^_" }]
	}
}
